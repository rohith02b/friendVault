// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id  String @unique
  username String
  email String @unique
  password String
}

model groups {
  id String @unique
  owner String
  code String @unique
  name String
  members String[] 
}

model files {
  group_id String
  url String @unique
  path String 
  file_name String
  type String
}
